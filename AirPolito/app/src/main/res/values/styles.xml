<resources>

    <!-- Base application theme. -->
    <style name="MainAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/greenDark</item>
        <item name="colorPrimaryDark">@color/greenLight</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MainAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="MainAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
